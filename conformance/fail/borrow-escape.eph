-- Conformance: fail/borrow-escape
-- Expected error: BorrowEscapeError (borrow escapes scope)
-- Tests: Borrows cannot outlive the value they borrow from

fn make_borrow() -> &String@r {
    region r {
        let s = String.new@r("temporary")
        -- ERROR: &s cannot be returned, s is about to be dropped
        &s
    }
}
