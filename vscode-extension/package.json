{
  "name": "ephapax",
  "displayName": "Ephapax Language Support",
  "description": "Language support for Ephapax - a linear/affine typed language",
  "version": "0.1.0",
  "publisher": "hyperpolymath",
  "license": "PMPL-1.0-or-later",
  "author": "Jonathan D.A. Jewell <jonathan.jewell@open.ac.uk>",
  "repository": {
    "type": "git",
    "url": "https://github.com/hyperpolymath/ephapax"
  },
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "ephapax",
    "linear-types",
    "affine-types",
    "memory-safety"
  ],
  "activationEvents": [
    "onLanguage:ephapax"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "ephapax",
        "aliases": [
          "Ephapax",
          "ephapax"
        ],
        "extensions": [
          ".eph"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/ephapax-light.png",
          "dark": "./icons/ephapax-dark.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "ephapax",
        "scopeName": "source.ephapax",
        "path": "./syntaxes/ephapax.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "ephapax.switchMode",
        "title": "Ephapax: Switch Type System Mode",
        "category": "Ephapax"
      },
      {
        "command": "ephapax.restartLsp",
        "title": "Ephapax: Restart Language Server",
        "category": "Ephapax"
      },
      {
        "command": "ephapax.showMode",
        "title": "Ephapax: Show Current Mode",
        "category": "Ephapax"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Ephapax",
      "properties": {
        "ephapax.mode": {
          "type": "string",
          "default": "linear",
          "enum": [
            "linear",
            "affine"
          ],
          "enumDescriptions": [
            "Linear mode: Values must be used exactly once",
            "Affine mode: Values can be used at most once (allows dropping)"
          ],
          "description": "Type system mode for Ephapax"
        },
        "ephapax.lsp.path": {
          "type": "string",
          "default": "ephapax-lsp",
          "description": "Path to ephapax-lsp executable"
        },
        "ephapax.lsp.trace": {
          "type": "string",
          "default": "off",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "description": "Trace LSP communication"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^2.24.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
